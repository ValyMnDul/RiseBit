generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName      String
  lastName       String
  email     String   @unique
  password  String
  birthDate DateTime
  profilePic  String?
  username String    @unique
  bio      String?  
  createdAt DateTime @default(now())
}

model PasswordReset {
  id        Int   @id @default(autoincrement())
  email     String
  code      String
  createdAt DateTime @default(now())
}

model Post {
  id        Int      @id @default(autoincrement())
  subtitle  String 
  content   String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}
