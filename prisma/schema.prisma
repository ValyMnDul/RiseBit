generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  email         String   @unique
  password      String
  firstName     String
  lastName      String
  birthDate     DateTime
  profilePic    String?
  bio           String?
  followersList String[] @default([])
  followingList String[] @default([])
  createdAt     DateTime @default(now())
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  email     String
  code      String
  succes    Boolean  @default(false)
  token     String?
  createdAt DateTime @default(now())
}

model Post {
  id        Int      @id @default(autoincrement())
  username  String
  subtitle  String
  content   String
  photos    String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([username])
}
